class MockLogger:
    def __init__(self):
        self.msgs = []
    def debug(self, msg):
        self.msgs.append(("DEBUG", msg))
    def warning(self, msg):
        self.msgs.append(("WARNING", msg))
    def warn(self, msg):
        self.warning(msg)
    def info(self, msg):
        self.msgs.append(("INFO", msg))
    def error(self, msg):
        self.msgs.append(("ERROR", msg))


